{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "foreground": "#E06C75",
                    "style": "plain",
                    "template": "root <#ffffff>in</> ",
                    "type": "root"
                },
                {
                    "foreground": "#55B9C4",
                    "properties": {
                        "style": "full"
                    },
                    "style": "plain",
                    "template": "{{ .Path }} ",
                    "type": "path"
                },
                {
                    "foreground": "#C678DD",
                    "properties": {
                        "fetch_status": true
                    },
                    "style": "plain",
                    "template": "<#ffffff>on</> {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
                    "type": "git"
                },
                {
                    "foreground": "#98C379",
                    "properties": {
                        "fetch_version": true
                    },
                    "style": "plain",
                    "template": "<#ffffff>via</> \ue781 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
                    "type": "node"
                },
                {
                    "foreground": "#C94A16",
                    "style": "plain",
                    "template": "x ",
                    "type": "status"
                },
                {
                    "foreground": "#98C379",
                    "properties": {
                        "display_mode": "environment",
                        "fetch_virtual_env": true,
                        "home_enabled": true
                    },
                    "style": "plain",
                    "template": "\ue235 {{ if .Venv }}({{ .Venv }}){{ end }} ",
                    "type": "python"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#63F08C",
                    "style": "plain",
                    "template": "\u279c ",
                    "type": "text"
                }
            ],
            "type": "prompt"
        }
    ],
    "transient_prompt": {
        "background": "transparent",
        "foreground": "#ffffff",
        "template": "‚ùØ "
    },
    "version": 2
}
